// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model Order {
  id        Int      @id @default(autoincrement())
  sipno     Int
  sipsr     Int
  firma     String?
  musadi    String?
  mail      String?
  tarih     String?
  urunadi   String?
  out       Int?
  stkno     String?
  sevktar   String?
  mik       Float?
  modul     String?
  kumas     String?
  acik      String?
  ayak      String?
  kirlent   String?
  tip       String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  mailSent      Boolean  @default(false)
  mailSentAt    DateTime?
  
  @@unique([sipno, sipsr])
}
